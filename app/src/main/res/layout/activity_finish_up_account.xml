<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FinishUpAccount">
    <include layout="@layout/toolbar_stepone">

    </include>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="460dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24">

        </ImageView>
        <TextView
            android:layout_width="396dp"
            android:layout_height="40dp"
            android:id="@+id/step1of3finish"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Step 1 Of 3"
            android:textColor="@color/black"
            android:textSize="20sp">
            
        </TextView>
        <TextView
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="Finish Settting Up Your Account"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:gravity="center"
            android:text="Netflix is personalized for you. Create
a password to watch netflix on
any device at any time"
            android:textColor="@color/black"
            android:textSize="25sp">

        </TextView>
        <Button
            android:layout_width="291dp"
            android:layout_height="58dp"
            android:layout_marginLeft="70dp"
            android:background="@color/red"
            android:text="Continue"
            android:id="@+id/continuebuttonfinish"
            android:textColor="@color/white"
            android:textSize="20sp">

        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>