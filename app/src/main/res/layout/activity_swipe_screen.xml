<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SwipeScreen"
        android:background="@color/black">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/Theme.AppCompat"
            android:background="@color/black"
            tools:ignore="MissingConstraints">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
                <ImageView
                    android:layout_width="55dp"
                    android:id="@+id/netlixlogo"
                    android:layout_height="55dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/ic_logo_netflix">

                </ImageView>

                <TextView
                    android:id="@+id/privacytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netlixlogo"
                    android:text="PRIVACY"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/helptextview"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netlixlogo"
                    android:text="HELP"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/signintextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netlixlogo"
                    android:text="SIGN IN"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpagerswipescreen"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="57dp"
                android:layout_marginBottom="63dp">

            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:id="@+id/sliderdots"
                android:layout_width="340dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="63dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/getstarted"
            android:layout_width="334dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/activedots"
            android:text="Get Started"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>